<Window x:Class="CaroGame.GameModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chọn Chế Độ Chơi" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Ô nhập tên người chơi -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <StackPanel Margin="10">
                    <TextBlock Text="Người chơi X:" FontWeight="Bold"/>
                    <TextBox x:Name="PlayerXName" Text="Player X" Width="120"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <TextBlock Text="Người chơi O:" FontWeight="Bold"/>
                    <TextBox x:Name="PlayerOName" Text="Player O" Width="120"/>
                </StackPanel>
            </StackPanel>

            <Button Content="Đấu nhanh" Click="NormalMode_Click"/>
            <TextBlock Text="Đấu giải" FontSize="20" FontWeight="Bold" Margin="0,10,0,10" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="BO3" Width="80" Margin="5" Click="BO3_Click"/>
                <Button Content="BO5" Width="80" Margin="5" Click="BO5_Click"/>
            </StackPanel>
            <TextBlock Text="Người VS Máy" FontSize="20" FontWeight="Bold" Margin="0,10,0,10" HorizontalAlignment="Center"/>
            <Button Content="Chơi với AI" Click="PlayAI_Click" Margin="0,5,0,5"/>
        </StackPanel>
    </Grid>
</Window>



